package com.javalec.base;

public class Main {

	public static void main(String[] args) {
		
		int sum1 = 0, sum2 = 0;
		//sum1 = 짝수의 합 , sum2 = 홀수의 
		for (int i = 0; i <= 100; i++) {
			
			if(i % 2 == 0) {
				sum1 = sum1 + i;
			}else {
				sum2 = sum2 + i;
			}
			
		}
		
		System.out.println("짝수의 합 : " + sum1+ "\n홀수의 합 : " + sum2);

	}

}
