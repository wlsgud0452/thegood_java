package com.javalec.base;

import java.util.Scanner;

public class ELSE02 {

	public static void main(String[] args) {
		int language = -1;
		int english = -1;
		int math = -1;
		double mean = 0;
		String languagestr = "";
		String englishstr = "";
		String mathstr = "";
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Insert language score");
		while (language<0 || language>100)
		{
			language = scanner.nextInt();
			
			if (language<0 || language>100) System.out.println("Invalid value");
		}
		System.out.println("Insert english score");
		while (english<0 || english>100)
		{
			english = scanner.nextInt();
			
			if (english<0 || english>100) System.out.println("Invalid value");
		}
		System.out.println("Insert math score");
		while (math<0 || math>100)
		{
			math = scanner.nextInt();
			
			if (math<0 || math>100) System.out.println("Invalid value");
		}
		
		mean = (language + math + english) / 3.0;

		if (language > mean) {
			languagestr = "higher than";
		} else if (language < mean) {
			languagestr = "lower than";
		} else if (language == mean) {
			languagestr = "equal to";
		}

		if (english > mean) {
			englishstr = "higher than";
		} else if (english < mean) {
			englishstr = "lower than";
		} else if (english == mean) {
			englishstr = "equal to";
		}

		if (math > mean) {
			mathstr = "higher than";
		} else if (math < mean) {
			mathstr = "lower than";
		} else if (math == mean) {
			mathstr = "equal to";
		}

		System.out.println("Mean score: " + mean);
		System.out.println("Language score is " + languagestr + " mean");
		System.out.println("English score is " + englishstr + " mean");
		System.out.println("Math score is " + mathstr + " mean");

	}

}
